<% items = @user.shops.collect(&:items).flatten %>
<div class="page-header">
  <h3><%= @user.name %>
  <% if items.length == 0 %>
     还没有发布过货物
  <% else %>
     共发布<%= items.length %>件货物
  <% end %>
  </h3>
</div>
<table class="table table-hover">
<tbody>
  <thead>
    <tr>
      <th>名称</th>
      <th>描述</th>
    </tr>
  </thead>
  <% items.each do |item| %>
    <tr onClick="goToItem(<%=item.id%>)">
      <td><%= item.name %></td>
      <td><%= item.description %></td>
    </tr>
  <% end %>
 </tbody>
</table>
<script type="text/javascript">
	function goToItem(id){
		location.href = "/items/" + id;
	}
</script>
