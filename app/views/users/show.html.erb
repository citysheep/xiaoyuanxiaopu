<div class="page-header">
  <h3><%= @user.name %></h3>
</div>
<% if @user.items.length == 0 %>
	<p>还没有发布过二手货</p>
<% else %>
	<p>共发布<span class="badge badge-info"><%= @user.items.length %></span>件二手货</p>
		<table class="table table-hover">
		<tbody>
			<thead>
				<tr>
					<th>名称</th>
					<th>描述</th>
				</tr>
			</thead>
			<% @user.items.each do |item| %>
				<tr onClick="goToItem(<%=item.id%>)">
					<td><%= item.name %></td>
					<td><%= item.description %></td>
				</tr>
			<% end %>
		 </tbody>
		</table>	
<script type="text/javascript">
	function goToItem(id){
		location.href = "/items/" + id;
	}
</script>
<% end %>
