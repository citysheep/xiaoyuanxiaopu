<div class="page-header">
  <h1>更新資料</h1>
</div>
<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put } do |f| %>
  <%= f.input :name, :label => "用戶名" %>
  <%= f.input :email, :disabled => true, :label => "電子郵箱" %>
  <%= f.hidden_field :email %>
  <%= f.input :password, :label => "新密碼", :input_html => {:autocomplete => "off"}, :hint => "如不想更改密碼，無須填寫" %>
  <%= f.input :password_confirmation, :label => "確認新密碼", :input_html => {:autocomplete => "off"} %>
  <%= f.input :current_password, :label => "當前密碼", :required => true,  :input_html => {:autocomplete => "off"}, :hint => "請輸入你的當前密碼以便確認資料更新" %>
  <%= f.button :submit, :class => "btn-success", :value => "更新" %>
<% end %>