<%= render 'admin/admin_navbar' %>
<table class="table table-hover">
  <tr>
    <th>分类名</th>
    <th></th>
    <th></th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to '修改', edit_admin_category_path(category) %></td>
      <td><%= link_to '删除', admin_category_path(category), confirm: 'Are you sure?', method: :delete %></td>
